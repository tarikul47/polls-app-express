<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Polls Project</title>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <button type="button" class="btn bg-light" data-bs-toggle="modal" data-bs-target="#exampleModal">
              Create New Poll
            </button>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <main>
    <section>
      <div class="container">
        <div class="row">
          <div class="col-lg-5 mx-auto py-5">
            <div class="card shadow">
              <div class="card-header text-center">
                Please submit your valuable vote
              </div>
              <div class="card-body">
                <h5 class="card-title text-center">
                  <%= polls.title %>
                </h5>
                <p class="card-text text-center">
                  <%= polls.description %>
                </p>
                <p class="text-center">Total Vote: <span>
                    <%= polls.totalVote %>
                  </span></p>
                <div class="card mb-2">
                  <div class="card-body">
                    <h5 class="card-title">Polls Result</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <ol class="list-group list-group-numbered">

                      <% for(let r of result) { %>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                          <div class="ms-2 me-auto">
                            <div class="fw-bold">
                              <%= r.name%>
                            </div>
                          </div>
                          <span class="badge bg-primary rounded-pill">
                            <%= r.percentage.toFixed(2) %>%
                          </span>
                        </li>
                        <%} %>
                    </ol>
                  </div>
                </div>
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Please submit your vote</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <form action="/poll/<%= polls._id %>" method="POST">
                      <% for( let option of polls.options) {%>
                        <div class="form-check">
                          <input value="<%= option.id %>" class="form-check-input" type="radio" name="option"
                            id="<%= option.id %>">
                          <label class="form-check-label" for="<%= option.id %>">
                            <%= option.name %>
                          </label>
                        </div>
                        <% }%>
                          <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                  </div>
                </div>
              </div>
              <div class="card-footer text-muted text-center">
                <p>Thank you!!!</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <footer></footer>

  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
